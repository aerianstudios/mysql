[client]
<% if @port %>
port                           = <%= @port %>
<% end %>
<% if @socket_file %>
socket                         = <%= @socket_file %>
<% end %>

[mysqld_safe]
socket                         = <%= @socket_file %>
<% if @nice %>
nice                           = 0
<% end %>

[mysqld]
user                           = mysql
pid-file                       = <%= @pid_file %>
socket                         = <%= @socket_file %>
<% if @port %>
port                           = <%= @port %>
<% end %>
<% if @basedir %>
basedir                        = <%= @base_dir %>
<% end %>
<% if @data_dir %>
datadir                        = <%= @data_dir %>
<% end %>
<% if @tmpdir %>
tmpdir                         = /tmp
<% end %>
<% if @lc_messages_dir %>
lc-messages-dir                = <%= @lc_messages_dir %>
<% end %>
<% if @innodb_flush_method %>
innodb_flush_method            = <%= @innodb_flush_method %>
<% end %>
<% if @innodb_log_files_in_group %>
innodb_log_files_in_group      = <%= @innodb_log_files_in_group %>
<% end %>
<% if @innodb_flush_log_at_trx_commit %>
innodb_flush_log_at_trx_commit = <%= @innodb_flush_log_at_trx_commit %>
<% end %>
<% if @innodb_file_per_table %>
innodb_file_per_table          = <%= @innodb_file_per_table %>
<% end %>
<% if @innodb_buffer_pool_size %>
innodb_buffer_pool_size        = <%= @innodb_buffer_pool_size %>
<% end %>
<% if @sql_mode %>
sql_mode                       = <%= @sql_mode %>
<% end %>

[mysql]
<% if @include_dir %>
!includedir <%= @include_dir %>
<% end %>
